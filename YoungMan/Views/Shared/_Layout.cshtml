<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/custom.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
   
    <title>@ViewBag.Title</title>
</head>
<body>

@*SideBar*@
<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="active bg-warning">
        <h1><a href="/" class="logo text-decoration-none"><span class="text-secondary">Y</span>M</a></h1>
        <ul class="list-unstyled components mb-5 hover">
            <li class="active">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none"><span class="fa fa-home"></span> Главная</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="About" class="text-decoration-none"><span class="fa fa-circle-info"></span> О Нас</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Catalog" class="text-decoration-none"><span class="fa fa-shirt" ></span> Каталог</a>
            </li>
            <li>
                <a asp-controller="Cart" asp-action="Index" class="text-decoration-none"><span class="fa fa-cart-arrow-down"></span> Корзина</a>
            </li>
           @if (!User.Identity.IsAuthenticated)
           {
               <li>
                   <a asp-controller="Account" asp-action="Login" class="text-decoration-none"><span class="fa fa-arrow-right-to-bracket"></span> Войти</a>
               </li>
               <li>
                   <a asp-controller="Account" asp-action="Registration" class="text-decoration-none"><span class="fa fa-address-card"></span> Регистрация</a>
               </li>
           }
           else
           {
               <li>
                   <a href="#" class="text-decoration-none"><span class="fa fa-user"></span> @User.Identity.Name</a>
               </li>
               <li>
                   <a asp-controller="Account" asp-action="Logout" class="text-decoration-none"><span class="fa-solid fa-arrow-right-from-bracket"></span> Выйти</a>
               </li>
           }
        </ul>

        <div class="footer">
            <p>
                2022 Ногин, П-18-1
            </p>
        </div>
    </nav>
    
    @*End sidebar*@
    
    @*Header*@
    <div id="content" class="p-4 p-md-5">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-warning">
                    <i class="fa fa-bars text-white"></i>
                    <span class="sr-only">Переключить меню</span>
                </button>
                <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="About" asp-controller="Home">О Нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Catalog" asp-controller="Home">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Cart">Корзина</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @*End of Header*@
        
    @*Page Content*@
        @RenderBody()
    </div>
</div>

<script src="https://kit.fontawesome.com/2bbfa3fb57.js" crossorigin="anonymous"></script>
<script src="/js/jquery.min.js"></script>
<script src="/js/popper.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="/js/main.js"></script>
</body>
</html>