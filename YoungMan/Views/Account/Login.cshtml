@model YoungMan.Models.ViewModels.LoginModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<div class="container shadow p-2">
    <form asp-action="Login" asp-controller="Account" method="post">
         <h1 class="text-center my-2">Вход в YoungMan</h1>
         <div asp-validation-summary="All"></div>
         <div>
                <div class="form-group">
                    <div asp-validation-for="Name"></div>
                    <label asp-for="Email"></label>
                    <input class="form-control" type="text" asp-for="Email"/>
                </div>
                <div class="form-group">
                    <div asp-validation-for="City"></div>
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password"/>
                </div>
                <div class="form-group align-items-center">
                    <input class="btn btn-warning text-white" type="submit" value="Вход"/>
                </div>
            </div>
        </form>
</div>
